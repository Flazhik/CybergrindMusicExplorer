<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <Target Name="ILRepacker" AfterTargets="Build">
        <ItemGroup>
            <InputAssemblies Include="$(TargetDir)CybergrindMusicExplorer.dll" />
            <InputAssemblies Include="$(TargetDir)Xabe.FFmpeg.dll" />
            <InputAssemblies Include="$(SourceDir)lib\SubtitlesParser.dll" />
            <InputAssemblies Include="$(SourceDir)lib\TagLibSharp.dll" />
        </ItemGroup>

        <ItemGroup>
            <SearchDirectories Include="$(BepInExCoreDir)" />
            <SearchDirectories Include="$(ManagedDir)" />
        </ItemGroup>

        <ILRepack
                Parallel="true"
                Internalize="true"
                InputAssemblies="@(InputAssemblies)"
                LibraryPath="@(SearchDirectories)"
                TargetKind="Dll"
                OutputFile="$(TargetDir)$(AssemblyName).dll"
        />
    </Target>
</Project>